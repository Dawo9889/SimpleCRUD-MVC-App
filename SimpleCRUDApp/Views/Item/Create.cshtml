@model Item

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Add new Item </h2>
        </div>

        <label asp-for="Id" hidden></label>
        <div class="mb-3">
            <label asp-for="ItemName"></label>
            <input asp-for="ItemName" class="form-control" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List </a>

    </div>
</form>
