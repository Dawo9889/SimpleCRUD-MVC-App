@model List<Item>

<div class="containter">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Items List
            </h2>
        </div>
        <div class="col-6 text-end">
           
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Add New Item
            </a>
        </div>

    </div>

    

<table class="table table-bordered table-str">
    <thead>
        <tr>
            <th>Items Name</th>
            <th>Price</th>
            <th></th>
           
        </tr>
    </thead>

    <tbody>
    @foreach(var obj in Model)
    {
        <tr>
            <td>
                @obj.ItemName
            </td>
            <td>
                @obj.Price.ToString("0.00") zł
            </td>
            <td>
              <div class="w-75 btn-group" role="group">
                    <a asp-controller="Item" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> Edit</a>
                    <a asp-controller="Item" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> Delete</a>

              </div>
            </td>
                
            
        </tr>
    }
    </tbody>
</table>
</div>
